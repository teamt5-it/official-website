server {
    listen <%= ENV["PORT"] %>;
    server_name ~^(?<fqdn>.+\.)?teamt5.(?<tld>(org|tw))$;
    keepalive_timeout 5;
    client_max_body_size <%= ENV['NGINX_CLIENT_MAX_BODY_SIZE'] || 1 %>M;

    root /app/_site; # path to your app

    if ($fqdn ~* "www") {
        rewrite ^/(.*)(\/|$) https://teamt5.org/$1 break;
    }

    if ($tld !~* "org") {
        rewrite ^/(.*)(\/|$) https://${fqdn}teamt5.org/$1 break;
    }

    try_files $uri $uri.html $uri/ =404;

    error_page 404 451 /404.html;
    location = /404.html {
        internal;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        internal;
    }

    location /.well-known/apple-app-site-association {
        default_type application/json;
    }

    include locations.conf;
}

server {
    listen <%= ENV["PORT"] %>;
    server_name ~^(?<fqdnsub>(?<subdomain>.+)\.)?(?<domain>threatsonar.(org|tw))$;
    keepalive_timeout 5;
    client_max_body_size <%= ENV['NGINX_CLIENT_MAX_BODY_SIZE'] || 1 %>M;

    root /app/_site; # path to your app

    try_files $uri $uri.html $uri/ =404;

    error_page 404 451 /404.html;
    location = /404.html {
        internal;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        internal;
    }

    location /.well-known/apple-app-site-association {
        default_type application/json;
    }

    include locations.conf;

    location / {
        rewrite ^/(.*)(\/|$) https://${fqdnsub}teamt5.org/product/threat-sonar break;
    }
}
